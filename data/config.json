{
  "data_dir": "./data/",
  "expt_dir": "./data/output",

  "features": {
    "src_word": {"emb_size":64, "dropout_p":0.2},
    "src_tag1": {"emb_size":32, "dropout_p":0.2},
    "src_tag2": {"emb_size":32, "dropout_p":0.2},
    "tgt_slot": {"emb_size":64, "dropout_p":0.2}},

  "rnn_cell": "lstm",
  "hidden_size": 256,
  "n_layers":1,
  "bidirectional":true,
  "dropout_p": 0.2,
  "lr": 0.001,
  "init_w":0.08,
  "max_grad_norm":3.0,

  "batch_size": 64,
  "num_epochs": 50,
  "display_freq": 100,
  "ckpt_freq": 200
}